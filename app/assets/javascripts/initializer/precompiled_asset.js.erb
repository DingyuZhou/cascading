<% def resourceImagePath(imageName)
  return Rails.root.join("resource", "picture", imageName)
end %>


<% def base64EncodedMediaSrc(mediaPath, mediaType)
  require "base64"
  media = File.open(mediaPath, "rb")
  base64EncodedData = Base64.encode64(media.read).gsub("\n", '')
  media.close
  return "data:#{mediaType};base64,#{base64EncodedData}"
end %>


var PrecompiledAsset = {
  Picture: {
    Forbidden: "<%= asset_path "forbidden.jpg" %>",
    DefaultArticleDraftPicture: "<%= asset_path "default_article_draft_picture.jpg" %>",
    ArticleEditAddText: "<%= base64EncodedMediaSrc(resourceImagePath("article-edit-add_text.png"), "image/png") %>",
    ArticleEditAddPicture: "<%= base64EncodedMediaSrc(resourceImagePath("article-edit-add_picture.png"), "image/png") %>",
    
    ButtonClose: "<%= base64EncodedMediaSrc(resourceImagePath("button_close.png"), "image/png") %>",
    ButtonSetting: "<%= base64EncodedMediaSrc(resourceImagePath("button_setting.png"), "image/png") %>",
  }
};
