<% if ($.cookie("user_id")) { %>
  <div id="layout-rightNav-user-menu" class="row">
    <div class="row">
      Welcome <%= $.cookie("user_nickname") %>!
    </div>
    <div class="row">
      <a class="layout-rightNav-alsoCloseNav" href="#/user/<%= $.cookie("user_id") %>">My Account</a>
    </div>
    <div class="row">
      <a class="layout-rightNav-alsoCloseNav" href="#/articles/user/<%= $.cookie("user_id") %>">All My Articles</a>
    </div>
    <div class="row">
      <a class="layout-rightNav-alsoCloseNav" href="#/articles/new">Write a new Article</a>
    </div>
    <div class="row">
      <a id="layout-rightNav-signOut" href="#">Sign Out</a>
    </div>
  </div>
<% } else { %>
  <div id="layout-rightNav-form">
    <div class="row">
      <input id="layout-rightNav-form-email" type="email" placeholder="Email">
    </div>
    <div class="row">
      <input id="layout-rightNav-form-password" type="password" placeholder="Password">
    </div>
    <div class="row">
      <input id="layout-rightNav-form-submit" class="button button-primary" type="button" value="Sign In">
    </div>
    <div class="row"></div>
    <div class="row text-align-center">
      <em><a class="layout-rightNav-alsoCloseNav" href="#/users/new">Or, join Haigy today!</a></em>
    </div>
  </div>
<% } %>
