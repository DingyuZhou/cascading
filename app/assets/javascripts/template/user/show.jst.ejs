<% var isVerifiedUser = parseInt(user.get("status")) !== GlobalConstant.User.Status.UNVERIFIED %>

<div id="user-show-container">
  <div class="one-central-column-container">
    <div class="central-column">
      <div id="user-show-header" class="row">
        <div class="left"><img src="<%= user.get("avatar_url") %>" /></div>
        <div class="right"><div id="user-show-nickname">welcome, <strong><%= user.get("nickname") %></strong></div></div>
      </div>
      
    <% if (!isVerifiedUser) { %>
      <div class="row user-show-option-group">
        <p>You are almost there!</p>
        <p>An verification email should be sent to your shortly.</p>
        <p>Please follow the instruction in it to verify your account.</p>
        <p>Thanks!</p>
        <br>
        <br>
        <p>If you haven't received the email by chance, please click button below to get a new one.</p>
        <p><button id="m-resend-email">Resend</button></p>
        <p id="m-resend-status"></p>
      </div>
    <% } %>
      
      <div class="row user-show-option-group">
        <a class="user-show-option" href="#/user/<%= user.get("id") %>/edit/profile">Edit My Profile</a>
        <a class="user-show-option" href="#/user/<%= user.get("id") %>/edit/email">Edit My Email</a>
        <a class="user-show-option" href="#/user/<%= user.get("id") %>/edit/password">Edit My Password</a>
      </div>
      
    <% if (isVerifiedUser) { %>
      <div class="row user-show-option-group">
        <a class="user-show-option" href="#/articles/user/<%= user.get("id") %>">All My Published Articles</a>
        <a class="user-show-option" href="#/categories/user/<%= user.get("id") %>">All My Article Categories</a>
      </div>
      
      <div class="row user-show-option-group">
        <a class="user-show-option" href="#/articles/draft/user/<%= user.get("id") %>">All My Drafts</a>
        <a class="user-show-option" href="#/articles/new">Write a New Article</a>
      </div>
    <% } %>
    </div>
  </div>
</div>
