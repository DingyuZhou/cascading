<div id="article-edit">
<div class="one-central-column-container">
<div class="central-column">

<div id="article-edit-main">
  <h1 class="row">Write a new Article</h1>
  
  <div class="empty-row"></div>
  
  <h3 class="row">Title</h3>
  <div class="row"><input type="textfield" id="article-edit-title"></div>
  
  <div class="empty-row"></div>
  
  <h3 class="row">Category</h3>
  <div class="row"><select id="article-edit-category">
    <option selected="selected" value="-1">choose a category</option>
    <% _.each(allCategories, function(category) { %>
      <option value="<%= category.get("id") %>"><%= category.get("name") %></option>
    <% }); %>
  </select></div>

  <div class="empty-row"></div>

  <h3 class="row">Content</h3>
  <div id="article-edit-content" class="row">
    <div id="article-edit-add-editor-container" class="row"></div>
  </div>
        
  <div class="empty-row"></div>
  
  <div class="row">
    <span class="inline-block col-xs-4 padding-s-lr"><button id="article-edit-save">Save</button></span>
    <span class="inline-block col-xs-4 padding-s-lr"><button id="article-edit-save-preview">Save and Preview</button></span>
    <span class="inline-block col-xs-4 padding-s-lr"><button id="article-edit-save-publish">Save and Publish</button></span>
  </div>
  
  <div class="empty-row"></div>
</div>

<div id="article-edit-preview"></div>

</div>
</div>
</div>