<div id="popup_container" class="popup_box"></div>

<div id="article-edit-container">
  Title: <input type="text" id="article-edit-title" class="textfield" value="TITLE" /><br />
  Category: <select id="article-edit-category">
    <option selected="selected" value="-1">choose a category</option>
    <% _.each(allCategories, function(category) { %>
      <option value="<%= category.get("id") %>"><%= category.get("name") %></option>
    <% }); %>
  </select>
  <br>
  Content: 
  <div id="article-edit-content"></div>
  <div>
    <button id="article-edit-add-text">add text</button>
    <button id="article-edit-add-picture">add picture</button>
  </div>
  <br /><br />
  <button id="article-edit-save">Save</button>
  <button id="article-edit-save-preview">Save and Preview</button>
  <button id="article-edit-save-publish">Save and Publish</button>
</div>