[
  <% unless @recommendArticles.empty? %>
    <% lastIndex = @recommendArticles.length - 1 %>
    <% @recommendArticles.each_with_index do |article, index| %>
      <% if index == lastIndex %>
        <%= render partial: "article_cover", locals: {articleCover: article} %>
      <% else %>
        <%= render partial: "article_cover", locals: {articleCover: article} %>,
      <% end %>
    <% end %>
  <% end %>
]